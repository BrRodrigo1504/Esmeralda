# Configurações de Ambiente para APIs de Pagamento Portuguesas
# Copie este arquivo para .env.local e preencha com suas credenciais reais

# === CONFIGURAÇÕES GERAIS ===
REACT_APP_ENVIRONMENT=development
REACT_APP_SITE_URL=http://localhost:5173

# === SIBS API MARKET (Recomendado para Portugal) ===
# Documentação: https://developer.sibsapimarket.com/
REACT_APP_SIBS_API_ENDPOINT=https://api.sibsapimarket.com/gateway
REACT_APP_SIBS_API_KEY=your_sibs_api_key_here
REACT_APP_SIBS_MERCHANT_ID=your_sibs_merchant_id_here
REACT_APP_SIBS_SANDBOX=true

# === EUPAGO (Alternativa) ===
# Documentação: https://www.eupago.pt/api/
REACT_APP_EUPAGO_API_ENDPOINT=https://api.eupago.pt
REACT_APP_EUPAGO_API_KEY=your_eupago_api_key_here
REACT_APP_EUPAGO_MERCHANT_ID=your_eupago_merchant_id_here
REACT_APP_EUPAGO_SANDBOX=true

# === LUSOPAY (Alternativa) ===
# Documentação: https://www.lusopay.com/
REACT_APP_LUSOPAY_API_ENDPOINT=https://api.lusopay.com
REACT_APP_LUSOPAY_API_KEY=your_lusopay_api_key_here
REACT_APP_LUSOPAY_MERCHANT_ID=your_lusopay_merchant_id_here
REACT_APP_LUSOPAY_SANDBOX=true

# === MYPOS CHECKOUT ===
# Documentação: https://www.mypos.com/pt-pt/pagamentos-online/checkout
REACT_APP_MYPOS_API_ENDPOINT=https://api.mypos.com
REACT_APP_MYPOS_API_KEY=your_mypos_api_key_here
REACT_APP_MYPOS_MERCHANT_ID=your_mypos_merchant_id_here
REACT_APP_MYPOS_SANDBOX=true

# === CONFIGURAÇÕES DE PAGAMENTO ===
# Método de pagamento padrão (multibanco, mbway, card, paypal, bank_transfer)
REACT_APP_DEFAULT_PAYMENT_METHOD=multibanco

# Moeda padrão
REACT_APP_DEFAULT_CURRENCY=EUR

# Valor mínimo para frete grátis (em euros)
REACT_APP_FREE_SHIPPING_THRESHOLD=50

# === CONFIGURAÇÕES DE EMAIL ===
# Para envio de confirmações de pedido
REACT_APP_EMAIL_SERVICE_ENDPOINT=your_email_service_endpoint
REACT_APP_EMAIL_API_KEY=your_email_api_key
REACT_APP_FROM_EMAIL=noreply@esmeralda.pt
REACT_APP_SUPPORT_EMAIL=suporte@esmeralda.pt

# === CONFIGURAÇÕES DE WEBHOOK ===
# URLs para receber notificações de pagamento
REACT_APP_WEBHOOK_URL=https://your-domain.com/api/webhooks/payment
REACT_APP_WEBHOOK_SECRET=your_webhook_secret_key

# === CONFIGURAÇÕES DE SEGURANÇA ===
# Chave para encriptação de dados sensíveis
REACT_APP_ENCRYPTION_KEY=your_encryption_key_here

# === CONFIGURAÇÕES DE ANALYTICS ===
# Para rastreamento de conversões de pagamento
REACT_APP_GOOGLE_ANALYTICS_ID=your_ga_id_here
REACT_APP_FACEBOOK_PIXEL_ID=your_fb_pixel_id_here

# === CONFIGURAÇÕES DE TESTE ===
# Dados de teste para desenvolvimento
REACT_APP_TEST_CARD_NUMBER=4111111111111111
REACT_APP_TEST_CARD_EXPIRY=12/25
REACT_APP_TEST_CARD_CVV=123
REACT_APP_TEST_MBWAY_PHONE=910000000

